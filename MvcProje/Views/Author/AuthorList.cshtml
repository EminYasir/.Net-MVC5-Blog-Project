@model IEnumerable<EntityLayer.Concrete.Author>
@{
    ViewBag.Title = "AuthorList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->

    <div class="wrapper">

        <!-- Navbar -->
        <!-- Main content -->
        <h2>Yazarlar Listesi</h2>
        <br/>
        <section class="content">

            <!-- Default box -->

            <div class="card card-solid">

                <div class="card-body pb-0">

                    <div class="row d-flex align-items-stretch">
                        @foreach (var x in Model)
                        {
                            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">


                                
                                <div class="card bg-light" style="width:550px;height:260px;">

                                    <div class="card-header text-muted border-bottom-0">

                                        @x.AuthorTitle

                                    </div>

                                    <div class="card-body pt-0">

                                        <div class="row">

                                            <div class="col-7">

                                                <h2 class="lead"><b>@x.AuthorName</b></h2>

                                                <p class="text-muted text-sm"><b>Hakkında: </b>@x.AboutShort </p>

                                                <ul class="ml-4 mb-0 fa-ul text-muted">

                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Mail Adresi: @x.Mail</li>
                                                    <br/>
                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Telefon #: @x.PhoneNumber</li>

                                                </ul>

                                            </div>

                                            <div class="col-5 text-center">

                                                <img src="@x.AuthorImage" alt="" class="img-circle img-fluid" style="height:180px; width:170px; margin-top:-30px">

                                            </div>

                                        </div>

                                    </div>

                                    <div class="card-footer">

                                        <div class="text-right">

                                            <a href="/Blog/BlogListByAuthor/@x.AuthorID" class="btn btn-sm bg-teal">

                                                <i class="fas fa-comments"></i> Yazarın Blogları

                                            </a>

                                            <a href="/Author/AuthorEdit/@x.AuthorID" class="btn btn-sm btn-primary">

                                                <i class="fas fa-user"></i>  Profili Düzenle

                                            </a>
                                            
                                            <a href="/Author/DeleteAuthor/@x.AuthorID" class="btn btn-sm btn-primary" style="display:none;">

                                                <i class="fas fa-user"></i>  Profili Sil

                                            </a>

                                        </div>

                                    </div>

                                </div>


                            </div>
                        }
                        </div>

                </div>

            </div>

            <!-- /.card -->

        </section>

        <!-- /.content -->

    </div>

    <!-- /.control-sidebar -->

</body>

</html>
<a href="/Author/AddAuthor" class="btn btn-success">Yeni Yazar Girişi</a>