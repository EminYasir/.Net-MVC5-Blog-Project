@model IEnumerable<EntityLayer.Concrete.Comment>
@{

    ViewBag.Title = "AdminCommentListTrue";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">
            @foreach (var item in Model)
            {
               
                    <div class="row">


                        <div class="card-body" style="border:1px solid gray; margin-bottom:5px;">

                            <!-- Post -->

                            <div class="post">

                                <div class="user-block">

                                    <img class="img-circle img-bordered-sm" src="@item.Blog.Author.AuthorImage" alt="user image">

                                    <span class="username">

                                        <a href="#">@item.UserName - @item.Blog.BlogTitle</a>

                                    </span>

                                    <span class="description">@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</span>

                                </div>

                                <!-- /.user-block -->

                                <p>

                                    @item.CommentText

                                </p>

                                <span class="float-right">

                                    <a href="/Comment/StatusChangeToFalse/@item.CommentID" class="link-black text-sm">

                                        <i class="far fa-comments mr-1"></i> Yorumu Kaldır

                                    </a>

                                </span>
                                <br />

                            </div>

                        </div>


                    </div>
                

            }
        </div><!-- /.card-body -->



    </section>

</body>

</html>