@model IEnumerable<EntityLayer.Concrete.Category>
<div class="sidebar-box">
    <h3 class="heading">Kategoriler</h3>
    <ul class="categories">
        @foreach (var item in Model)
        {
            if (@item.CategoryStatus == true)
            {
                <li><a href="/Blog/BlogByCategory/@item.CategoryID">@item.CategoryName<span></span></a></li>
            }
        }


    </ul>
</div>