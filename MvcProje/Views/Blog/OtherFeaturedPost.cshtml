
<div class="site-section bg-light">
    <div class="container">

        <div class="row align-items-stretch retro-layout">

            <div class="col-md-5 order-md-2">
                <a href="/Blog/BlogDetails/@ViewBag.postBlogID1" class="hentry img-1 h-100 gradient" style="background-image: url('@ViewBag.postimage1');">
                    <span class="post-category text-white bg-warning"> @ViewBag.postcategory1</span>
                    <div class="text text-sm">
                        <h2>@ViewBag.posttitle1</h2>
                        <span>@(((DateTime)ViewBag.postdate1).ToString("dd-MMM-yyyy"))</span>
                    </div>
                </a>
            </div>

            <div class="col-md-7">

                <a href="/Blog/BlogDetails/@ViewBag.postBlogID2" class="hentry img-2 v-height mb30 gradient" style="background-image: url('@ViewBag.postimage2');">
                    <span class="post-category text-white bg-info"> @ViewBag.postcategory2</span>
                    <div class="text text-sm">
                        <h2>@ViewBag.posttitle2</h2>
                        <span>@(((DateTime)ViewBag.postdate2).ToString("dd-MMM-yyyy"))</span>
                    </div>
                </a>

                <div class="two-col d-block d-md-flex">
                    <a href="/Blog/BlogDetails/@ViewBag.postBlogID3" class="hentry v-height img-2 gradient" style="background-image: url('@ViewBag.postimage3');">
                        <span class="post-category text-white bg-primary"> @ViewBag.postcategory3</span>
                        <div class="text text-sm">
                            <h2>@ViewBag.posttitle3</h2>
                            <span>@(((DateTime)ViewBag.postdate3).ToString("dd-MMM-yyyy"))</span>
                        </div>
                    </a>
                    <a href="/Blog/BlogDetails/@ViewBag.postBlogID4" class="hentry v-height img-2 ml-auto gradient" style="background-image: url('@ViewBag.postimage4');">
                        <span class="post-category text-white bg-danger"> @ViewBag.postcategory4</span>
                        <div class="text text-sm">
                            <h2>@ViewBag.posttitle4</h2>
                            <span>@(((DateTime)ViewBag.postdate4).ToString("dd-MMM-yyyy"))</span>
                        </div>
                    </a>
                </div>

            </div>
        </div>

    </div>
</div>
