@model EntityLayer.Concrete.Blog

@{ string color = "";

    if (@Model.Category.CategoryName == "Seyahat")
    {
        color = "post-category text-white bg-danger mb-3";
    }
    if (@Model.Category.CategoryName == "Teknoloji")
    {
        color = "post-category text-white bg-info mb-3";
    }
    if (@Model.Category.CategoryName == "Film & Dizi")
    {
        color = "post-category text-white bg-primary mb-3";
    }
    if (@Model.Category.CategoryName == "Yazılım")
    {
        color = "post-category text-white bg-warning mb-3";
    }
    if (@Model.Category.CategoryName == "Spor")
    {
        color = "post-category text-white bg-success mb-3";
    }}
<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('@Model.BlogImage');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <span class="@color">@Model.Category.CategoryName</span>
                    <h1 class="mb-4"><a href="#">@Model.BlogTitle</a></h1>
                    <div class="post-meta align-items-center text-center">
                        <figure class="author-figure mb-0 mr-3 d-inline-block"><img src="@Model.Author.AuthorImage" alt="Image" class="img-fluid"></figure>
                        <span class="d-inline-block mt-1">@Model.Author.AuthorName</span>
                        <span>&nbsp;-&nbsp; @(((DateTime)Model.BlogDate).ToString("dd-MMM-yyyy"))</span>
                        <br />
                        <span>Puan: @Model.BlogRating</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

