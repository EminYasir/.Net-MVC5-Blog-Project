@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "BlogListByAuthor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}
@{ string statu = "";}
<h2>BlogListByAuthor</h2>

<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->



        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Blog Listem</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Blog Başlığı

                            </th>

                            <th style="width: 20%">

                                Blog Değerlendime Oranı

                            </th>

                            <th style="width: 8%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>

                            <tr>

                                <td>

                                    @item.BlogId

                                </td>

                                <td>

                                    <a>

                                        @item.BlogTitle

                                    </a>

                                    <br />

                                </td>

                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="@item.BlogRating" aria-volumemin="0" aria-volumemax="100" style="width: @item.BlogRating%">

                                        </div>

                                    </div>

                                    <small>

                                        Aldığı Puan= @item.BlogRating

                                    </small>

                                </td>
                                @if (item.BlogRating >= 85)
                                {
                                    color = "post-category text-white bg-success mb-3";
                                    statu = "Çok İyi";
                                }
                                @if (item.BlogRating <= 85 && item.BlogRating >= 70)
                                {
                                    color = "post-category text-white bg-info mb-3";
                                    statu = "Başarılı";
                                }
                                @if (item.BlogRating <= 79 && item.BlogRating >= 70)
                                {
                                    color = "post-category text-white bg-primary mb-3";
                                    statu = "Normal";
                                }
                                @if (item.BlogRating <= 69 && item.BlogRating >= 50)
                                {
                                    color = "post-category text-white bg-warning mb-3";
                                    statu = "Fena Değil";
                                }
                                @if (item.BlogRating <= 49 && item.BlogRating >= 0)
                                {
                                    color = "post-category text-white bg-danger mb-3";
                                    statu = "Vasat";
                                }

                                <td class="project-state">

                                    <span class="badge @color">@statu</span>

                                </td>

                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@item.BlogId">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="#">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                </td>

                            </tr>

                        </tbody>
                    }
                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>
    <a class="btn btn-primary" href="/Blog/AddNewBlog/"> Yeni Blog Yaz</a>
    <a class="btn btn-primary" href="/Author/AuthorList/"> Geri Dön</a>

</body>

</html>